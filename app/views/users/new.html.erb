<%= render "layouts/topic", topic: "Registration" %>
<%= form_tag "/users" do %>
  <div class="control-group">
    <%= label_tag "user_username", "Username" %>
    <%= text_field_tag "user[username]" %>
    <%= label_tag "user_password", "Password" %>
    <%= password_field_tag "user[password]" %>
    <br>
    <%= submit_tag "Regist", class: "btn btn-primary" %>
  </div>
<% end %>