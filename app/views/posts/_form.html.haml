= form_for @post do |f|
  %div.control-group
    = f.label :title
    = f.text_field :title
    = f.label :url
    = f.text_field :url
    = f.label :description
    = f.text_area :description
    %br/
    = f.collection_check_boxes(:category_ids, Category.all, :id, :name)
    
    = f.submit("Send", :class => "btn")